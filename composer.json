{
    "name": "ziumper/templodocs",
    "description": "A sacred tool to generate docs",
    "type": "library",
    "version": "1.0.0",
    "autoload": {
        "psr-4": {
            "Ziumper\\Templodocs\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ziumper\\Templodocs\\Tests\\Utils\\": "tests/utils",
            "Ziumper\\Templodocs\\Tests\\Unit\\": "tests/unit",
            "Ziumper\\Templodocs\\Tests\\Integration\\": "tests/integration"
        }
    },
    "bin": [
        "bin/templodocs"
    ],
    "scripts": {
        "tests": "vendor/bin/phpunit -c phpunit.xml.dist --display-warnings --display-deprecations --display-phpunit-deprecations",
        "qa": "vendor/bin/phpstan analyze src/ tests/ & vendor/bin/phpcs src tests",
        "qa-fix": "vendor/bin/phpcbf src tests"
    },
	"scripts-descriptions": {
		"tests" : "Run all tests",
		"qa-fix" : "Run phpcbf fix for phpcs errors",
        "qa": "Run phpstan and phpcs"
	},
    "require": {
	"php": ">=8.3",
        "phpoffice/phpword": "^1.3",
        "league/csv": "^9.23",
        "ext-dom": "*",
        "ext-gd": "*",
        "ext-zip": "*",
        "ext-json": "*",
        "ext-xml": "*",
        "ext-filter": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^4.0",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.4"
    }
}
